extends layout

block content
  h1 Bastard Chat
  div#receiveSpace
    form#receiving
      output#messageWindow(type="text" placeholder="You must be a bastard if you have no messages." height="900px" width="600px")
  div#messageSpace
  div#name-prompt
    form
      input#name(type="text" placeholder="Enter a name, Bastard")
      input(type="submit" value="That's a right Bastard name.")
  div#typingSpace(style="display: none")
    form#typing
      input#message(type="text" placeholder="Be a Bastard" name="message")
      input(type="submit" value="Send!")

 